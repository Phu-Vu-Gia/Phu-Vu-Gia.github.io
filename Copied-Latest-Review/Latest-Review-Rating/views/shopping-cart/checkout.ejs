<div class="container-fluid checkout-background mt-2 pt-4 pb-5">
    <div class="container">
        <h1 class="checkout-title fw-bold">Checkout</h1>

        <div class="row mt-5">
            <div class="col-md-8 d-flex flex-column justify-content-center align-items-center gap-4">
                <div class="payment-container w-100 p-4 pt-3">
                    <span class="payment-infomation fw-bold m-0 p-0">Payment Information</span>

                    <div class="row mt-4">
                        <form class="payment-form">
                            <div class="col-md">
                                <label for="card-number" class="form-label m-0 fw-bold">Card Number</label>
                                <input type="text" id="card-number" name="card-number" placeholder="1234 5678 9012 3456" class="form-control border-0 outline-0 mt-1" required>
                            </div>

                            <div class="col-md my-4">
                                <label for="card-name" class="form-label m-0 fw-bold">Cardholder Name</label>
                                <input type="text" id="card-name" name="card-name" placeholder="John Doe" class="form-control border-0 outline-0 mt-1" required>
                            </div>

                            <div class="col-md">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <label for="card-expiry-date" class="form-label m-0 fw-bold">Expiry Date</label>
                                        <input type="text" id="card-expiry-date" name="card-expiry-date" placeholder="MM/YY" class="form-control border-0 outline-0 mt-1" required>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="cvv" class="form-label m-0 fw-bold">CVV</label>
                                        <input type="text" id="cvv" name="cvv" placeholder="123" class="form-control border-0 outline-0 mt-1" required>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="delivery-container w-100 p-4 pt-3">
                    <span class="delivery-information fw-bold">Delivery Address</span>

                    <div class="row mt-4">
                        <form class="delivery-form">
                            <div class="col-md">
                                <label for="street-address" class="form-label m-0 fw-bold">Street Address</label>
                                <input type="text" id="street-address" name="street-address" placeholder="123 Main Street" class="form-control border-0 outline-0 mt-1" required>
                            </div>

                            <div class="col-md my-4">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <label for="city" class="form-label m-0 fw-bold">City</label>
                                        <input type="text" id="city" name="city" placeholder="New York" class="form-control border-0 outline-0 mt-1" required>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="zip" class="form-label m-0 fw-bold">ZIP Code</label>
                                        <input type="text" id="zip" name="zip" placeholder="10001" class="form-control border-0 outline-0 mt-1" required>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md">
                                <label for="country" class="form-label m-0 fw-bold">Country</label>
                                <input type="text" id="country" name="country" placeholder="America" class="form-control border-0 outline-0 mt-1" required>
                            </div>
                        </form>
                    </div>
                </div>

                <a href="/order-confirmation" class="complete-purchase-btn text-decoration-none w-100 text-center py-3 d-none d-md-block">Complete Purchase</a>
            </div>

            <div class="col-md-4 mt-md-0 mt-5">
                <div class="order-container p-4 pt-3 sticky-top">
                    <span class="order-summary fw-bold my-0 fs-3">Order Summary</span>

                    <div class="d-flex flex-column align-items-center justify-content-center gap-3 mt-4">
                        <div class="subtotal-container d-flex flex-row align-items-center justify-content-between w-100">
                            <span class="subtotal-title">Subtotal</span>
                            <span class="subtotal-price">$209.96</span>
                        </div>

                        <div class="tax-container d-flex flex-row align-items-center justify-content-between w-100">
                            <span class="tax-title">Tax (10%)</span>
                            <span class="tax-price">$21.00</span>
                        </div>

                        <hr class="hr w-100 mt-3 mb-1">

                        <div class="total-container d-flex flex-row align-items-center justify-content-between w-100">
                            <span class="total-title fw-bold">Total</span>
                            <span class="total-price fw-bold">$230.96</span>
                        </div>
                    </div>
                </div>

                <a href="/order-confirmation" class="complete-purchase-btn text-decoration-none w-100 text-center py-3 d-md-none d-block mt-3">Complete Purchase</a>
            </div>
        </div>
    </div>
</div>