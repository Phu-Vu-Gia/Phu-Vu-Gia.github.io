<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5 my-5">
  <!-- Full Card -->
  <div class="card user-card row g-0 flex-column flex-lg-row align-items-stretch">
    <!-- User Panel: Left Side -->
    <div class="user-panel col-lg-3 d-flex flex-column align-items-center text-center">
      <!-- Avatar and Welcome Message -->
      <div class="w-100 d-flex flex-column align-items-center">
        <img src="/img/charles.jpg" alt="User avatar" class="user-avatar mt-4" />
        <h1 class="card-title">Welcome, Charles</h1>
      </div>
      <nav class="nav flex-column w-100 gap-2 mt-4 flex-grow-1">
        <a class="nav-link" href="/my-profile">
          <i class="bi bi-person"></i>
          My Profile
        </a>
        <a class="nav-link active" href="/my-games">
          <i class="bi bi-folder-fill"></i>
          My Games
        </a>
        <a class="nav-link" href="/security-settings">
          <i class="bi bi-shield-lock-fill"></i>
          Security
        </a>
      </nav>
      <a class="text-decoration-none logout-link mt-4" href="/">
        <i class="bi bi-box-arrow-right"></i>
        Log out
      </a>
    </div>
    <!-- My Games Content: Right Side -->
    <section class="col-lg-9 games-info-panel h-100">
      <div class="card-body">
        <div class="d-flex flex-column gap-3">
          <!-- First game card -->
          <div class="game-card d-flex align-items-stretch gap-3">
            <!-- Game Cover Image -->
            <img src="/img/cyberpunk-cover.jpeg" alt="Cyberpunk 2077" class="game-card-img" />
            <!-- Game Info -->
            <div class="flex-grow-1 d-flex flex-column justify-content-between">
              <!-- Top row -->
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="mb-0 fw-bold">Cyberpunk 2077</h5>
                  <small class="text-white-50">Edition: Standard</small>
                </div>
                <small>Quantity: 1</small>
              </div>
              <!-- Bottom Row -->
              <small class="text-white-50">Paid on 14/10/2025</small>
            </div>
          </div>
          <!-- Second game card -->
          <div class="game-card d-flex align-items-stretch gap-3">
            <!-- Game Cover Image -->
            <img src="/img/gta6-cover.png" alt="Cyberpunk 2077" class="game-card-img" />
            <!-- Game Info -->
            <div class="flex-grow-1 d-flex flex-column justify-content-between">
              <!-- Top row -->
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="mb-0 fw-bold">GTA 6</h5>
                  <small class="text-white-50">Edition: Standard</small>
                </div>
                <small>Quantity: 1</small>
              </div>
              <!-- Bottom Row -->
              <small class="text-white-50">Paid on 19/03/2026</small>
            </div>
          </div>
          <!-- Third game card -->
          <div class="game-card d-flex align-items-stretch gap-3">
            <!-- Game Cover Image -->
            <img src="/img/overwatch-cover.png" alt="Cyberpunk 2077" class="game-card-img" />
            <!-- Game Info -->
            <div class="flex-grow-1 d-flex flex-column justify-content-between">
              <!-- Top row -->
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="mb-0 fw-bold">Overwatch 2</h5>
                  <small class="text-white-50">Edition: Standard</small>
                </div>
                <small>Quantity: 1</small>
              </div>
              <!-- Bottom Row -->
              <small class="text-white-50">Paid on 20/02/2026</small>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>