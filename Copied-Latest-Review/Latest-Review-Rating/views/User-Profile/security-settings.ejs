<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5 my-5">
  <!-- Full Card -->
  <div class="card user-card row g-0 flex-column flex-lg-row align-items-stretch">
    <!-- Class align-items-stretch quan trá»ng -->
    <!-- User Panel: Left Side -->
    <div class="user-panel col-lg-3 d-flex flex-column align-items-center text-center">
      <!-- Avatar and Welcome Message -->
      <div class="w-100 d-flex flex-column align-items-center">
        <img src="/img/charles.jpg" alt="User avatar" class="user-avatar mt-4" />
        <h1 class="card-title">Welcome, Charles</h1>
      </div>
      <nav class="nav flex-column w-100 gap-2 mt-4 flex-grow-1">
        <a class="nav-link" href="/my-profile">
          <i class="bi bi-person"></i>
          My Profile
        </a>
        <a class="nav-link" href="/my-games">
          <i class="bi bi-folder-fill"></i>
          My Games
        </a>
        <a class="nav-link active" href="/security-settings">
          <i class="bi bi-shield-lock-fill"></i>
          Security
        </a>
      </nav>
      <a class="text-decoration-none logout-link mt-4" href="/">
        <i class="bi bi-box-arrow-right"></i>
        Log out
      </a>
    </div>
    <!-- Profile Content: Right Side -->
    <section class="col-lg-9 security-panel h-100">
      <div class="card-body">
        <!-- Username -->
        <div class="d-flex justify-content-between align-items-end pb-3 mb-4">
          <div class="flex-grow-1 w-100">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" value="charlesphan" disabled />
          </div>
          <a href="/edit-security-settings" class="btn btn-primary btn-security">Edit</a>
        </div>

        <!-- Password -->
        <div class="d-flex justify-content-between align-items-end pb-3 mb-4">
          <div class="flex-grow-1 w-100">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" value="password123" disabled />
          </div>
          <a href="/edit-security-settings" class="btn btn-primary btn-security">Change Password</a>
        </div>

        <!-- Security Question 1 -->
        <div class="d-flex justify-content-between align-items-end pb-3 mb-4">
          <div class="flex-grow-1 w-100">
            <label for="question1" class="form-label">Security Question 1</label>
            <input type="text" class="form-control" id="question1" value="What is your favorite color?" disabled />
          </div>
          <a href="/edit-security-settings" class="btn btn-primary btn-security">Edit Question</a>
        </div>

        <!-- Security Question 1 Answer -->
        <div class="d-flex justify-content-between align-items-end pb-3 mb-4">
          <div class="flex-grow-1 w-100">
            <label for="answer1" class="form-label">Security Question 1 Answer</label>
            <input type="password" class="form-control" id="answer1" value="red" disabled />
          </div>
          <a href="/edit-security-settings" class="btn btn-primary btn-security">Edit Answer</a>
        </div>

        <!-- Security Question 2 -->
        <div class="d-flex justify-content-between align-items-end pb-3 mb-4">
          <div class="flex-grow-1 w-100">
            <label for="question2" class="form-label">Security Question 2</label>
            <input type="text" class="form-control" id="question2" value="What is your favorite color?" disabled
              readonly />
          </div>
          <a href="/edit-security-settings" class="btn btn-primary btn-security">Edit Question</a>
        </div>

        <!-- Security Question 2 Answer -->
        <div class="d-flex justify-content-between align-items-end">
          <div class="flex-grow-1 w-100">
            <label for="answer2" class="form-label">Security Question 2 Answer</label>
            <input type="password" class="form-control" id="answer2" value="blue" disabled />
          </div>
          <a href="/edit-security-settings" class="btn btn-primary btn-security">Edit Answer</a>
        </div>
      </div>
    </section>
  </div>
</div>