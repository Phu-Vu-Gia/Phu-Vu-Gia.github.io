<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5 my-5">
  <!-- Full Card -->
  <div class="card user-card row g-0 flex-column flex-lg-row align-items-stretch">
    <!-- Class align-items-stretch quan trá»ng -->
    <!-- User Panel: Left Side -->
    <div class="user-panel col-12 col-md-3 d-flex flex-column align-items-center text-center">
      <!-- Avatar and Welcome Message -->
      <div class="w-100 d-flex flex-column align-items-center">
        <img src="/img/charles.jpg" alt="User avatar" class="user-avatar mt-4" />
        <h1 class="card-title">Welcome, Charles</h1>
      </div>
      <nav class="nav flex-column w-100 gap-2 mt-4 flex-grow-1">
        <a class="nav-link active" href="/my-profile">
          <i class="bi bi-person"></i>
          My Profile
        </a>
        <a class="nav-link" href="/my-games">
          <i class="bi bi-folder-fill"></i>
          My Games
        </a>
        <a class="nav-link" href="/security-settings">
          <i class="bi bi-shield-lock-fill"></i>
          Security
        </a>
      </nav>
      <a class="text-decoration-none logout-link mt-4" href="/">
        <i class="bi bi-box-arrow-right"></i>
        Log out
      </a>
    </div>
    <!-- Profile Content: Right Side -->
    <section class="col-12 col-lg-9 panel-info h-100">
      <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 profile-header">
          <div class="d-flex align-items-center gap-3">
            <img src="/img/charles.jpg" alt="User avatar" class="user-avatar" />
            <div>
              <h3 class="fw-bold mb-0">Charlesphan</h3>
              <p class="text-white-50 mb-0">charlesphan@example.com</p>
            </div>
          </div>
          <a class="btn btn-primary edit-profile-btn" href="/edit-profile">Edit</a>
        </div>

        <form class="row g-3 mt-4 profile-form">
          <!-- Full Name -->
          <div class="col-12 col-md-6">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" placeholder="Charles Phan" disabled />
          </div>
          <!-- Nickname -->
          <div class="col-12 col-md-6">
            <label for="nickname" class="form-label">Nickname</label>
            <input type="text" class="form-control" id="nickname" placeholder="Matrix" disabled />
          </div>

          <!-- Gender -->
          <div class="col-12 col-md-6">
            <label for="gender" class="form-label">Gender</label>
            <select type="text" class="form-select" id="gender" value="Charles Phan" disabled>
              <option value="male" selected>Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>
          </div>

          <!-- Phone Number -->
          <div class="col-12 col-md-6">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="phoneNumber" placeholder="123-456-7890" disabled />
          </div>

          <!-- Country -->
          <div class="col-12 col-md-6">
            <label for="country" class="form-label">Country</label>
            <select type="text" class="form-select" id="country" value="Charles Phan" disabled>
              <option value="male" selected>Vietnam</option>
              <option value="female">China</option>
              <option value="other">USA</option>
            </select>
          </div>

          <!-- Language -->
          <div class="col-12 col-md-6">
            <label for="language" class="form-label">Language</label>
            <select type="text" class="form-select" id="language" value="Charles Phan" disabled>
              <option value="male" selected>Vietnamese</option>
              <option value="female">Chinese</option>
              <option value="other">English</option>
            </select>
          </div>
        </form>
        <p class="mt-5 mb-0 fw-semibold">My email address</p>
        <div class="email-card mt-2">
          <i class="bi bi-envelope-fill fs-4"></i>
          <div class="email-meta d-flex flex-column">
            <span>charlesphan@gmail.com</span>
            <small>1 month ago</small>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>